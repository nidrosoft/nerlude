# ===========================================
# Nerlude Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# ===========================================
# App Configuration
# ===========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Nerlude

# ===========================================
# Supabase Configuration
# ===========================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# Authentication
# ===========================================
# JWT secret for session tokens (generate a random 32+ char string)
AUTH_SECRET=your-auth-secret-min-32-characters

# Optional: OAuth providers
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# ===========================================
# Encryption
# ===========================================
# 32-byte hex string for AES-256 encryption of credentials
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32-byte-hex-encryption-key

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@nerlude.com

# ===========================================
# File Storage (Optional)
# ===========================================
# Cloudflare R2 or AWS S3
# STORAGE_ENDPOINT=
# STORAGE_ACCESS_KEY_ID=
# STORAGE_SECRET_ACCESS_KEY=
# STORAGE_BUCKET_NAME=

# ===========================================
# Analytics (Optional)
# ===========================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_POSTHOG_KEY=
# NEXT_PUBLIC_POSTHOG_HOST=

# ===========================================
# Error Tracking (Sentry)
# ===========================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# ===========================================
# Rate Limiting (Upstash Redis)
# ===========================================
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# ===========================================
# Background Jobs (Optional)
# ===========================================
# For Trigger.dev or Inngest
# TRIGGER_API_KEY=
# TRIGGER_API_URL=
